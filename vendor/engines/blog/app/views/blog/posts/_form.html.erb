<%= simple_form_for([@blog, @post]) do |f| %>
  <%= f.input :title, autofocus: true %>
  <%= f.input :content, as: :trix_editor, data: {} %>
  <%= f.input :my_tags %>
  <%= f.input :published %>

  <div class="buttons">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', blog.blog_posts_path(@blog), class: 'btn btn-default' %>    
  </div>
<% end %>

<script type="text/javascript">
  $(document).on("turbolinks:load", function() {
    $('#post_my_tags').amsifySuggestags({
      suggestions: ['Black', 'White', 'Red', 'Blue', 'Green', 'Orange'],
      selectOnHover: true
    });
  });
</script>