<h1><%= @product.name %></h1>

<div class="row">
  <div class="col-sm-6">
    <%#= image_tag @product.images.first.preview(resize_to_limit: [200, 200]) %>
    <%= image_tag main_app.url_for(@product.images.first), class: 'img-thumbnail img-responsive' %>
  </div>
  <div class="col-sm-6">
    <col class="row">
    <div class="col-sm-12"><%= @product.description.html_safe %></div>
    <hr/>
    <div class="col-sm-6">Price</div>
    <div class="col-sm-6">&nbsp;<%= @product.net_price %></div>
    <div class="col-sm-6">Tax</div>
    <div class="col-sm-6">&nbsp;<%= @product.tax %></div>
    <div class="col-sm-6">SKU</div>
    <div class="col-sm-6">&nbsp;<%= @product.sku %></div>
    <div class="col-sm-6">Barcode</div>
    <div class="col-sm-6">&nbsp;<%= @product.barcode %></div>
    <div class="col-sm-6">Available pieces</div>
    <div class="col-sm-6">&nbsp;<%= @product.available_pieces %></div>
    <div class="col-sm-6">Physical product</div>
    <div class="col-sm-6">&nbsp;<%= @product.physical_product %></div>
    <div class="col-sm-6">&nbsp;<%= @product.unit_name %></div>
    <div class="col-sm-6">&nbsp;<%= @product.unit_value %></div>
    <div class="col-sm-6">Country of origin</div>
    <div class="col-sm-6">&nbsp;<%= @product.country_of_origin %></div>
    <div class="col-sm-6">Vendor</div>
    <div class="col-sm-6">&nbsp;<%= @product.vendor %></div>
    <div class="col-sm-12">&nbsp;<%= @product.tags.join(', ') %></div>
    <div class="col-sm-12">&nbsp;<%= @product.groups.join(', ') %></div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= button_to "Add to cart...", webshop.webshop_line_items_path(params[:webshop_id], :product_id => @product.id), class: 'btn btn-block btn-warning' %>
  </div>
  <div class="col-sm-6">
    <%= link_to 'Back to products...', webshop.webshop_path(@webshop), class: 'btn btn-default' %>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to webshop.edit_webshop_product_path(@webshop, @product), class: 'btn btn-warning' do %>
      <span class="fa fa-edit"></span>
    <% end if policy(@product).edit? %>
    <%= link_to webshop.webshop_product_path(@webshop, @product), class: 'btn btn-danger', method: :delete, data: {confirm: "Are you sure?"} do %>
      <span class="fa fa-trash"></span>
    <% end if policy(@product).destroy? %>
  </div>
</div>