<li class="nav-item dropdown">
  <% if user_signed_in? %>
    <a data-toggle="dropdown" aria-expanded="false" class="dropdown-toggle nav-link" href="#"><%= current_user.email %></a>
    <div role="menu" class="dropdown-menu">
      <%= link_to 'My profile...', auth.edit_user_registration_path, class: 'dropdown-item', role: 'presentation' %>
      <%= link_to 'Sign out', auth.destroy_user_session_path, class: 'dropdown-item', role: 'presentation' %>
    </div>
  <% else %>
    <a data-toggle="dropdown" aria-expanded="false" class="dropdown-toggle nav-link" href="#">Sign in</a>
    <div role="menu" class="dropdown-menu">
      <%= link_to 'Sign in', auth.new_user_session_path, class: 'dropdown-item', role: 'presentation' %>
      <%= link_to 'Sign up', auth.new_user_registration_path, class: 'dropdown-item', role: 'presentation' %>
    </div>
  <% end %>
</li>
