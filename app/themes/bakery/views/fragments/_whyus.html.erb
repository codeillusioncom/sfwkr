<%= render 'shared/edit_button', page: @page, fragment: fragment if @page && fragment %>
<div class="blue-background container">
    <div class="container my-container">
        <h1 class="text-center"><%= sanitize JSON.parse(fragment.value)['h'] %></h1>
        <div class="row">
            <div class="col-md-4 text-center item"><i class="material-icons my-icon">cake</i>
                <h2><%= sanitize JSON.parse(fragment.value)['h1'] %></h2>
                <p class="my-text"><%= sanitize JSON.parse(fragment.value)['text1'] %></p>
            </div>
            <div class="col-md-4 text-center item"><i class="material-icons my-icon">nature</i>
                <h2><%= sanitize JSON.parse(fragment.value)['h2'] %></h2>
                <p class="my-text"><%= sanitize JSON.parse(fragment.value)['text2'] %></p>
            </div>
            <div class="col-md-4 text-center item"><i class="material-icons my-icon">tag_faces</i>
                <h2><%= sanitize JSON.parse(fragment.value)['h3'] %></h2>
                <p class="my-text"><%= sanitize JSON.parse(fragment.value)['text2'] %></p>
            </div>
        </div>
    </div>
</div>
